<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_adapter_image_view"
        android:layout_width="@dimen/add_item_screen_list_image_height_width"
        android:layout_height="@dimen/add_item_screen_list_image_height_width"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/list_adapter_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_adapter_image_view"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_toRightOf="@id/list_adapter_image_view"
        android:textColor="@android:color/black"
        android:textSize="@dimen/extra_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_adapter_des_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_adapter_title_text_view"
        android:layout_marginLeft="@dimen/small_margin"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@id/list_adapter_image_view"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size" />

</RelativeLayout>